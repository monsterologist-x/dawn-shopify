{%- comment -%} #custom_code
2020-05-04 noindex 'collection' tags
{%- endcomment -%}
{%- if template contains 'collection' and current_tags -%}
<meta name="robots" content="noindex" />
<link rel="canonical" href="{{ shop.url }}{{ collection.url }}" />
{%- else -%}
<link rel="canonical" href="{{ canonical_url }}" />
{%- endif -%}

