{%if product.metafields.reference.related_products.value != blank %}
<h3>Related Products</h3>
<ul class="related_products">
  {% assign related_products =  product.metafields.reference.related_products.value %}
  {% for product in related_products  %}     
    <li>
      <a href="{{ product.url }}">
{{product.title}}
      </a>
    </li>
  {% endfor %}
</ul>
{% endif %}